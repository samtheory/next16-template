{
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "files": {
    "includes": ["src/**/*.{ts,tsx}", "*.config.{ts,mjs}"],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn",
        "noNonNullAssertion": "error"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  }
}
